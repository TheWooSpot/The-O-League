---

<Layout title="Programs">
  <Navbar />
  <main>
    <section class="py-20 relative">
      <div class="absolute inset-0 bg-gradient-to-b from-secondary-900/30 to-transparent z-0"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6 leading-tight">
            Our <span class="text-gradient">Programs</span>
          </h1>
          
          <p class="text-xl text-gray-300 mb-8">
            Comprehensive enrichment opportunities designed to support the whole child and foster growth in multiple areas.
          </p>
        </div>
      </div>
    </section>
    
    {programs.map((category) => (
      <section class="py-16" id={category.category.toLowerCase().replace(/\s+/g, '-')}>
        <div class="container mx-auto px-4">
          <div class="flex items-center space-x-4 mb-12">
            <div class={`w-12 h-12 rounded-xl bg-gradient-to-br ${category.color} flex items-center justify-center text-2xl`}>
              {category.icon}
            </div>
            <h2 class="text-3xl font-display font-bold">{category.category}</h2>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {category.programs.map((program) => (
              <div class="bg-dark-100/50 backdrop-blur-sm border border-gray-800 rounded-xl p-6 card-hover">
                <h3 class="text-xl font-display font-semibold mb-3">{program.title}</h3>
                <p class="text-gray-300 mb-4">{program.description}</p>
                <div class="flex flex-wrap gap-4 mt-auto">
                  <div class="bg-dark-200 rounded-lg px-3 py-1 text-sm text-gray-300">
                    {program.ages}
                  </div>
                  <div class="bg-dark-200 rounded-lg px-3 py-1 text-sm text-gray-300">
                    {program.schedule}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    ))}
    
    <section class="py-16 bg-dark-200/50">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <div class="bg-dark-100/50 backdrop-blur-sm border border-gray-800 rounded-xl p-8">
            <h2 class="text-2xl font-display font-bold mb-4">Program Registration</h2>
            <p class="text-gray-300 mb-6">
              Ready to join one of our programs? Registration is easy! Choose from the options below:
            </p>
            
            <div class="space-y-4 mb-6">
              <div class="flex items-start space-x-3">
                <i class="fas fa-check-circle text-primary-500 mt-1"></i>
                <div>
                  <h3 class="font-semibold text-white">Online Registration</h3>
                  <p class="text-gray-400">Create an account and register through our member portal.</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <i class="fas fa-check-circle text-primary-500 mt-1"></i>
                <div>
                  <h3 class="font-semibold text-white">In-Person Registration</h3>
                  <p class="text-gray-400">Visit our center during business hours to register with our staff.</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <i class="fas fa-check-circle text-primary-500 mt-1"></i>
                <div>
                  <h3 class="font-semibold text-white">Phone Registration</h3>
                  <p class="text-gray-400">Call (503) 555-0123 to register over the phone.</p>
                </div>
              </div>
            </div>
            
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="/membership" class="px-6 py-3 bg-gradient-to-r from-secondary-600 to-primary-600 rounded-lg font-medium text-white hover:opacity-90 transition-opacity shadow-lg text-center">
                Register Now
              </a>
              <a href="#" class="px-6 py-3 bg-transparent border border-white rounded-lg font-medium text-white hover:bg-white/10 transition-colors text-center">
                Download Program Guide
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <CallToAction />
  </main>
  <Footer />
</Layout>
